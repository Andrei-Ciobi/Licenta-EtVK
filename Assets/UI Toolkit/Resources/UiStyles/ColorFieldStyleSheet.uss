.color-field {
    align-items: center;
}

.color-field__label {
    -unity-text-align: middle-center;
    -unity-font: url('project://database/Assets/ExtraAssets/TextMesh%20Pro/Examples%20&%20Extras/Fonts/Bangers.ttf?fileID=12800000&guid=5dd49b3eacc540408c98eee0de38e0f1&type=3#Bangers');
    -unity-font-definition: none;
    padding: 0px;
    margin: 0px;
}

.color-field__reset-button {
    height:28px;
    margin: 0 0 0 5px;
    padding: 0 8px;
}

.color-field__input {
    border-color: var(--color-primary-drk);
    background-color: var(--color-back-drk);
}

