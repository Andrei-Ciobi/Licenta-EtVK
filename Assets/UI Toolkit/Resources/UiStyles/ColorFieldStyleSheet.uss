.color-field__input-rgb {
    flex-grow: 1;
    width: 100%;
    background-color: black;
}

.color-field__input-alpha-container {
    height: 6px;
    width: 100%;
    border-top-width: 1px;
    border-top-color: rgb(68, 68, 68);
    background-color: rgb(0, 0, 0);
}

.color-field__input-alpha {
    flex-grow: 0;
    flex-shrink: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: white;
}